<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_137_WPF"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="_137_WPF.MainWindow"
        mc:Ignorable="d"
        Title="JediGui" Height="450" Width="800">
    <!-- XAML -> Exentsible Application Markup Language-->
    <Grid>


        <Button>
            <Button>
                <Button.FontSize>
                    <System:Double>72</System:Double>
                </Button.FontSize>
                <Button.Width>
                    <System:Double>600</System:Double>
                </Button.Width>
                <Button.Height>
                    <System:Double>100</System:Double>
                </Button.Height>


                <WrapPanel>
                    <TextBlock Foreground="Blue"><Run Text="Multi"/></TextBlock>
                    <TextBlock Foreground="Green"><Run Text="Multi"/></TextBlock>
                    <TextBlock Foreground="Red"><Run Text="Multi"/></TextBlock>
                </WrapPanel>
            </Button>
        </Button>

    </Grid>
</Window>
